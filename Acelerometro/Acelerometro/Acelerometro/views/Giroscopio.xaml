<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Acelerometro.views.Giroscopio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Giroscopio"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="resultado" TextColor="Black"/>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="IniciarGiroscopio" Text="Iniciar"/>
            <Button HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="PararGiroscopio" Text="Parar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>